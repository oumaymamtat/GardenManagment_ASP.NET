@model IEnumerable<Model.Spent>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AccountingLayout.cshtml";
}

<h2>List of spent</h2>

<p>
    <a href=@ViewBag.LienXL class="btn  btn-success">Export[XL]</a>
</p>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered table-hover table-striped table-checkable table-highlight-head mb-4">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th>
           Creation date
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeSepent)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Total)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DateC)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeSepent)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
    </td>
</tr>
}

</table>
