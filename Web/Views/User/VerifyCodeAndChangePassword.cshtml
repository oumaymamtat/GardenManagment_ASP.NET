@model Model.CodeVerifPass

@{
    ViewBag.Title = "VerifyCodeAndChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<div class="page-content bg-white">
    <!-- inner page banner -->
    <div class="dlab-bnr-inr overlay-black-middle bg-pt" style="background-image:url(/Content/images/banner/bnr4.jpg);">
        <div class="container">
            <div class="dlab-bnr-inr-entry">
                <h1 class="text-white">Login</h1>
                <!-- Breadcrumb row -->
                <div class="breadcrumb-row">
                    <ul class="list-inline">
                        <li><a href="@Url.Action("ForgetPassword","User")">Forget Password</a></li>
                        <li>Change Password</li>
                    </ul>
                </div>
                <!-- Breadcrumb row END -->
            </div>
        </div>
    </div>
    <!-- inner page banner END -->
    <!-- contact area -->
    <div class="section-full content-inner shop-account">
        <!-- Product -->
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h2 class="font-weight-700 m-t0 m-b40">Enter Your Code to change password</h2>
                </div>
            </div>
            <div class="row dzseth">
                <div class="col-lg-6 col-md-6 m-b30" style="height: 418px;">
                    <div class="p-a30 border-1 seth" style="height: 418px;">
                        <div class="tab-content">
                            <h4 class="font-weight-700">NEW CUSTOMER</h4>
                            <p class="font-weight-600">By creating an account with our store, you will be able to move through the checkout process faster, store multiple shipping addresses, view and track your orders in your account and more.</p>
                            <a class="site-button m-r5 button-lg radius-no" href="javascript:void(0);">CREATE AN ACCOUNT</a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 col-md-6 m-b30" style="height: 418px;">
                    <div class="p-a30 border-1 seth" style="height: 418px;">
                        <div class="tab-content nav">
                            @using (Html.BeginForm("VerifyCodeAndChangePassword", "User", FormMethod.Post, new { enctype = "multipart/form-data" }))
                            {
                                <form  class="tab-pane active col-12 p-a0 " method="post">
                                      @*@Html.HiddenFor(@Session[" email"])*@

                            
                                <p class="font-weight-600">Code has been successfully sent to @Session["Email"] </p>
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.email, htmlAttributes: new { @class = "form-control", placeholder = "Enter Your Email" })
                                    @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })

                                </div>
                                <div class="form-group">

                                    @Html.TextBoxFor(model => model.Code, htmlAttributes: new { @class = "form-control", placeholder = "Enter Your Code" })
                                    @Html.ValidationMessageFor(model => model.Code, "", new { @class = "text-danger" })
                                   
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.Password, htmlAttributes: new { @class = "form-control", placeholder = "Enter Your New Password" })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                               
                                </div>
                                <div class="form-group">
                                    @Html.PasswordFor(model => model.confirmpassword, htmlAttributes: new { @class = "form-control", placeholder = "Confirm Password" })
                                    @Html.ValidationMessageFor(model => model.confirmpassword, "", new { @class = "text-danger" })
                                </div>
                                <div class="text-left">
                                    <input type="submit" value="Confirm" class="site-button m-r5 button-lg radius-no" />

                                </div>
                            </form>

                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Product END -->
    </div>

</div>





