


@{ Layout = "~/Views/Shared/_LayoutParent.cshtml"; }

<link rel="stylesheet" href="../../Content/stripe/global.css" />

<script src="https://js.stripe.com/v3/"></script>
<script src="../../Scripts/stripe/client.js" defer></script>

<!-- Display a payment form -->
@using (Html.BeginForm())
{
<form id="payment-form">
    <input type="text" id="email" placeholder="Email address" />
    <div id="card-element"><!--Stripe.js injects the Card Element--></div>
    <button id="submit">
        <div class="spinner hidden" id="spinner"></div>
        <span id="button-text">Pay</span>
    </button>
    <p id="card-errors" role="alert"></p>
    <p class="result-message hidden">
        Payment succeeded, see the result in your
        <a href="" target="_blank">Stripe dashboard.</a> Refresh the page to pay again.
    </p>
</form>

  <p>Refer to <a href="https://stripe.com/docs/testing">this link</a> to know which cards you can use to test.</p>

}