@using Microsoft.AspNet.Identity;
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Admin | Dashboard</title>
    <meta content='width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no' name='viewport'>
    <!-- bootstrap 3.0.2 -->
    @Styles.Render("~/admin/css")

    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//code.jquery.com/jquery-1.11.1.min.js"></script>
    <script src="https://kit.fontawesome.com/7e8994375a.js" crossorigin="anonymous"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.3.0/respond.min.js"></script>
    <![endif]-->
</head>
<body class="skin-black">
    <!-- header logo: style can be found in header.less -->
    <header class="header">
        <a href="index.html" class="logo">
            <!-- Add the class icon to your logo image or logo icon to add the margining -->
            Admin Garten
        </a>
        <!-- Header Navbar: style can be found in header.less -->
        <nav class="navbar navbar-static-top" role="navigation">
            <!-- Sidebar toggle button-->
            <a href="#" class="navbar-btn sidebar-toggle" data-toggle="offcanvas" role="button">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </a>
            <div class="navbar-right">
                <ul class="nav navbar-nav">
                    <!-- Messages: style can be found in dropdown.less-->
                    <!-- Tasks: style can be found in dropdown.less -->
                    <!-- User Account: style can be found in dropdown.less -->
                    <li class="dropdown user user-menu">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                            <i class="fa fa-user"></i>
                            <span> @Session["firstname"] <i class="caret"></i></span>
                        </a>
                        <ul class="dropdown-menu">
                            <!-- User image -->
                            <li class="user-header bg-light-blue">
                                <img src="~/Content/images/avatar_admin.jpg" class="img-circle" alt="User Image" />
                                <p>
                                    @Session["firstname"] @Session["lastname"]
                                    <small>Member since @Session["datecreation"]</small>
                                </p>
                            </li>
                           
                            <!-- Menu Footer-->
                            <li class="user-footer">
                                <div class="pull-left">
                                    @*@Html.ActionLink("Edit", "Edit", new { id = item.Id })*@

                                    @Html.ActionLink("Profile", "EditProfile", "Admin", new { id = @Session["id"] }, new { @class= "btn btn-default btn-flat" } )
                                    @*<a href="@Html.ActionLink("Profile",new { id = @Session["id"] }) class="btn btn-default btn-flat">Profile</a>*@
                                </div>
                                <div class="pull-right">
                                    <a href="@Url.Action("SignOut","User")" class="btn btn-default btn-flat">Sign out</a>
                                </div>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="wrapper row-offcanvas row-offcanvas-left">
        <!-- Left side column. contains the logo and sidebar -->
        <aside class="left-side sidebar-offcanvas">
            <!-- sidebar: style can be found in sidebar.less -->
            <section class="sidebar">
                <!-- Sidebar user panel -->
                <div class="user-panel">
                    <div class="pull-left image">
                        <img src="~/Content/images/avatar_admin.jpg" class="img-circle" alt="User Image" />
                    </div>
                    <div class="pull-left info">
                        <p>Hello, @Session["firstname"]</p>

                        <a href="#"><i class="fa fa-circle text-success"></i> Online</a>
                    </div>
                </div>
                <!-- search form -->
                <form action="#" method="get" class="sidebar-form">
                    <div class="input-group">
                        <input type="text" name="q" class="form-control" placeholder="Search..." />
                        <span class="input-group-btn">
                            <button type='submit' name='seach' id='search-btn' class="btn btn-flat"><i class="fa fa-search"></i></button>
                        </span>
                    </div>
                </form>
                <!-- /.search form -->
                <!-- sidebar menu: : style can be found in sidebar.less -->
                <ul class="sidebar-menu">
                    <li class="active">
                        <a href="@Url.Action("Index", "KinderGarten")">

                            <i class="fa fa-school"></i> <span>&nbsp;&nbsp;&nbsp;All Kindergartens</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("getKindergartenByResponsible", "KinderGarten")">

                            <i class="fas fa-school"></i><span>&nbsp;&nbsp;&nbsp;&nbsp;My Kindergartens</span>
                        </a>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-tasks"></i>
                            <span>Manage Activities</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li> <a href="@Url.Action("Index","Activity")"><i class="fa fa-angle-double-right"></i> All activities</a> </li>
                            <li><a href="@Url.Action("ActivityByKinderGarten","Activity")"><i class="fa fa-angle-double-right"></i> My Activities</a></li>
                        </ul>
                    </li>
                    <li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-calendar"></i>
                            <span> Manage Event</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index", "Event") "><i class="fa fa-angle-double-right"></i>Events</a> </li>
                            <li><a href="@Url.Action("EventForChild","Event")"><i class="fa fa-angle-double-right"></i> Events for child</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="far fa-handshake"></i>
                            <span> Manage Meetings</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("IndexAdminGarten","Meeting") "><i class="fa fa-angle-double-right"></i>Meetings</a> </li>
                            <li><a href="@Url.Action("Index","Meeting")"><i class="fa fa-angle-double-right"></i> Meeting with parent</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Club")">
                            <i class="fa fa-book"></i><span>Manage Clubs</span>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-list-alt" aria-hidden="true"></i>
                            <span> Manage Category</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index","Category") "><i class="fa fa-angle-double-right"></i>All Categories</a> </li>
                            <li><a href="@Url.Action("CategoryByKinderGarten","Category")"><i class="fa fa-angle-double-right"></i> My Categories</a></li>
                        </ul>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Vote")">
                            <i class="fas fa-vote-yea"></i>
                            <span>Manage Vote</span>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","SessionVote")">
                            <i class="fa fa-sign-out" aria-hidden="true"></i><span>Manage vote sessions</span><n>
                        </a>
                    </li>
                    <li class="treeview">
                        <a href="#">
                            <i class="fa fa-plus" aria-hidden="true"></i>
                            <span>Manage Extras</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index","Extra") "><i class="fa fa-angle-double-right"></i>All Extras</a> </li>
                            <li><a href="@Url.Action("ExtraByKinderGarten","Extra")"><i class="fa fa-angle-double-right"></i> My Extras</a></li>
                        </ul>
                    </li>

                    <li class="treeview">
                        <a href="#">
                            <i class="fas fa-subscript"></i>
                            <span> Manage subscriptions</span>
                            <i class="fa fa-angle-left pull-right"></i>
                        </a>
                        <ul class="treeview-menu">
                            <li><a href="@Url.Action("Index","CategorySubscription") "><i class="fa fa-angle-double-right"></i>All Categories subscription</a> </li>
                            <li><a href="@Url.Action("CategorySubscriptionByKinderGarten","CategorySubscription")"><i class="fa fa-angle-double-right"></i> My Categories subscription</a></li>
                        </ul>
                    </li>
                </ul>
            </section>
            <!-- /.sidebar -->
        </aside>

        <!-- Right side column. Contains the navbar and content of the page -->
        <aside class="right-side">
            <!-- Content Header (Page header) -->
            <!-- Main content -->
            @RenderBody()
        </aside><!-- /.right-side -->
    </div><!-- ./wrapper -->
    <!-- add new calendar event modal -->
    <!-- jQuery 2.0.2 -->
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/2.0.2/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/raphael/2.1.0/raphael-min.js"></script>
    @Scripts.Render("~/admin/js")

</body>
</html>