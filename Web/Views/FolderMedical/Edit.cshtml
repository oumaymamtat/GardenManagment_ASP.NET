@model Model.FolderMedical

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_LayoutMedical.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>FolderMedical</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.DateC)
        @Html.HiddenFor(model => model.LisChildVaccines)

        <div class="form-group">
            @Html.LabelFor(model => model.ChildId, "Child", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ChildId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.ChildId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Allergy, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Allergy, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Allergy, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Particularity, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Particularity, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Particularity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.VaccineId, "Vaccine", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("VaccineId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.VaccineId, "", new { @class = "text-danger" })

                 
            </div>

           

        </div>

        <div>

            <h4>Vaccine history</h4>

            <table class="table table-bordered table-hover table-striped table-checkable table-highlight-head mb-4">
                <tr>
                    <th>
                        Description
                    </th>
                    <th>
                        Month number
                    </th>
                    <th>
                         
                    </th>
                </tr>

                @foreach (var item in Model.LisChildVaccines)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.MonthNumber)
                        </td>
                        <td>
                            @Html.ActionLink("DeleteVaccine", "DeleteVaccine", new { id = item.Id })
                        </td>
                    </tr>
                }
            </table>

        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>


